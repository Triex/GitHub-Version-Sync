{
  "name": "GitHub-VersionSync",
  "displayName": "GitHub Version Sync",
  "description": "A simple VS Code extension to automatically update version numbers, and create release notes when committing.",
  "version": "0.0.1",
  "publisher": "TriexDev",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Source Control"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/TriexDev/IDE-Easy-Commit"
  },
  "activationEvents": [
    "onStartupFinished",
    "onView:scm"
  ],
  "contributes": {
    "configuration": {
      "title": "GitHub Version Sync",
      "properties": {
        "githubVersionSync.enableAutoTag": {
          "type": "boolean",
          "default": true,
          "description": "Automatically create and push git tags when committing version changes"
        },
        "githubVersionSync.enableGitHubRelease": {
          "type": "boolean",
          "default": false,
          "description": "Automatically create GitHub releases when committing version changes"
        },
        "githubVersionSync.versionFile": {
          "type": "string",
          "default": "VERSION",
          "description": "Name of the version file to use (relative to workspace root)"
        }
      }
    },
    "commands": [
      {
        "command": "extension.versionCommitPatch",
        "title": "Version: Patch Commit",
        "category": "Git",
        "icon": "$(tag)"
      },
      {
        "command": "extension.versionCommitMinor",
        "title": "Version: Minor Commit",
        "category": "Git",
        "icon": "$(versions)"
      },
      {
        "command": "extension.versionCommitMajor",
        "title": "Version: Major Commit",
        "category": "Git",
        "icon": "$(milestone)"
      },
      {
        "command": "extension.customVersion",
        "title": "Version: Custom...",
        "category": "Git",
        "icon": "$(edit)"
      },
      {
        "command": "extension.toggleGitHubRelease",
        "title": "Version: Toggle GitHub Release",
        "category": "Git",
        "icon": "$(repo)"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "extension.versionCommitPatch",
          "group": "navigation@1",
          "when": "scmProvider == git && gitOpenRepositoryCount != 0"
        },
        {
          "command": "extension.versionCommitMinor",
          "group": "navigation@2",
          "when": "scmProvider == git && gitOpenRepositoryCount != 0"
        },
        {
          "command": "extension.versionCommitMajor",
          "group": "navigation@3",
          "when": "scmProvider == git && gitOpenRepositoryCount != 0"
        },
        {
          "command": "extension.customVersion",
          "group": "navigation@4",
          "when": "scmProvider == git && gitOpenRepositoryCount != 0"
        }
      ],
      "commandPalette": [
        {
          "command": "extension.versionCommitPatch",
          "when": "scmProvider == git && gitOpenRepositoryCount != 0"
        },
        {
          "command": "extension.versionCommitMinor",
          "when": "scmProvider == git && gitOpenRepositoryCount != 0"
        },
        {
          "command": "extension.versionCommitMajor",
          "when": "scmProvider == git && gitOpenRepositoryCount != 0"
        },
        {
          "command": "extension.customVersion",
          "when": "scmProvider == git && gitOpenRepositoryCount != 0"
        },
        {
          "command": "extension.toggleGitHubRelease",
          "when": "scmProvider == git && gitOpenRepositoryCount != 0"
        }
      ]
    }
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "bun run build",
    "build": "bun build ./src/extension.ts --outdir ./out --target node --external vscode",
    "watch": "bun build ./src/extension.ts --outdir ./out --target node --watch --external vscode",
    "test": "bun test"
  },
  "devDependencies": {
    "@types/node": "^22.13.9",
    "@types/vscode": "^1.97.0",
    "typescript": "^4.9.5",
    "vscode-test": "latest"
  },
  "dependencies": {
    "axios": "^1.8.1"
  }
}