{
  "name": "GitHub-VersionSync",
  "displayName": "GitHub Version Sync",
  "description": "A simple VS Code extension to automatically update version numbers, and create release notes when committing.",
  "version": "0.0.1",
  "publisher": "TriexDev",
  "engines": { "vscode": "^1.75.0" },
  "categories": ["Source Control"],
  "activationEvents": ["onStartupFinished"],
  "contributes": {
    "menus": {
      "scm/title": [
        {
          "command": "extension.versionCommitPatch",
          "when": "scmProvider == git",
          "group": "navigation"
        },
        {
          "command": "extension.versionCommitMinor",
          "when": "scmProvider == git",
          "group": "navigation"
        },
        {
          "command": "extension.versionCommitMajor",
          "when": "scmProvider == git",
          "group": "navigation"
        }
      ]
    }
  },
  "commands": [
    {
      "command": "extension.versionCommitPatch",
      "title": "Patch Commit (Auto Version)"
    },
    {
      "command": "extension.versionCommitMinor",
      "title": "Minor Commit (Auto Version)"
    },
    {
      "command": "extension.versionCommitMajor",
      "title": "Major Commit (Auto Version)"
    }
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "typescript": "^4.9.5",
    "vscode-test": "^1.6.2"
  }
}
