{
  "name": "github-versionsync",
  "displayName": "GitHub Version Sync",
  "description": "A simple VS Code extension to automatically update version numbers, and create release notes when committing.",
  "version": "0.0.1",
  "publisher": "TriexDev",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Source Control"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/TriexDev/IDE-Easy-Commit"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "GitHub Version Sync",
      "properties": {
        "github-versionsync.versionFile": {
          "type": "string",
          "default": "",
          "description": "Optional: Path to a VERSION file (relative to workspace root). Leave empty to use only package.json"
        },
        "github-versionsync.enableAutoTag": {
          "type": "boolean",
          "default": true,
          "description": "Automatically create Git tags when version is updated"
        },
        "github-versionsync.enableGitHubRelease": {
          "type": "boolean",
          "default": false,
          "description": "Create GitHub releases automatically when version is updated"
        },
        "github-versionsync.releasePrefix": {
          "type": "string",
          "default": "v",
          "description": "Prefix to use for release tags (e.g., 'v' for v1.0.0)"
        }
      }
    },
    "commands": [
      {
        "command": "extension.selectVersionType",
        "title": "Select Version Type",
        "icon": "$(versions)",
        "category": "Version Control"
      },
      {
        "command": "extension.openVersionSettings",
        "title": "Version Settings",
        "icon": "$(gear)",
        "category": "Version Control"
      },
      {
        "command": "extension.toggleGitHubRelease",
        "title": "Toggle GitHub Releases",
        "icon": "$(github)",
        "category": "Version Control"
      }
    ],
    "views": {
      "scm": [
        {
          "id": "scm-version-selector",
          "name": "Version Control",
          "when": "git.state == initialized"
        }
      ]
    },
    "menus": {
      "scm/title": [
        {
          "command": "extension.openVersionSettings",
          "group": "navigation"
        },
        {
          "command": "extension.selectVersionType",
          "group": "1_version@1"
        },
        {
          "command": "extension.toggleGitHubRelease",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "extension.selectVersionType",
          "when": "view == scm-version-selector",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "extension.selectVersionType",
          "when": "view == scm-version-selector",
          "group": "inline"
        }
      ]
    }
  },
  "main": "./out/extension.js",
  "scripts": {
    "build": "tsc -p ./",
    "vscode:prepublish": "npm run build",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^22.13.9",
    "@types/vscode": "^1.94.0",
    "typescript": "^4.9.5",
    "vscode-test": "^1.6.1"
  },
  "dependencies": {
    "axios": "^1.8.1"
  }
}